
# Staging Environment Configuration
# Copy this file to .env.local and replace the placeholder values with your actual Supabase staging project details

# Set to 'true' to use the staging environment
VITE_USE_STAGING=true

# Your Supabase staging project URL (from Project Settings → API)
# Should look like: https://something.supabase.co
VITE_SUPABASE_STAGING_URL=your_staging_project_url

# Your Supabase staging project anon/public key (from Project Settings → API)
VITE_SUPABASE_STAGING_KEY=your_staging_project_anon_key
