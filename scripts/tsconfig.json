{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/scripts",
    "rootDir": "..",
    "moduleResolution": "bundler",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*", "../src/types/**/*"],
  "exclude": ["node_modules"]
} 